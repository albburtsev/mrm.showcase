.sidebar
	position: absolute
	z-index: 10
	top: 2vw
	bottom: 2vw
	left: 2vw
	width: 28vw

	&__holder
		background: block-bg
		box-shadow: block-shadow

	&__head
		margin: 0
		padding: 1vw 1.3vw
		font-size: 2vw
		font-weight: normal
		white-space: nowrap

	&__item
		padding: 0.8vw 1.3vw
		border-top: 1px solid #EEE

		&_color_yellow
			background-color: #F7F5C2

		&_color_red
			background-color: #F0D8D8

		&_color_green
			background-color: #D8F0D8

		&__title
			margin: 0 0 0.5vw
			padding: 0
			font-size: 1.2vw
			font-weight: normal